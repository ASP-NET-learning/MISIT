<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CookiesSalesSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/equipment.css" />
    <link rel="stylesheet" href="~/CookiesSalesSystem.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/33d6c0fa08.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <div class="machine-navbar">
            <div>
                <a asp-area="" asp-controller="System" asp-action="Index">首頁</a>
            </div>
            <div >
                <a asp-area="" asp-controller="Search" asp-action="Index">訂單查詢</a>
            </div>
            <div >
                <a asp-area="" asp-controller="Equipment" asp-action="Index">設備管理</a>
            </div>
            <div >
                <a asp-area="" asp-controller="Authority" asp-action="Index">權限管理</a>
            </div>
            
            <div >
                <a asp-area="" asp-controller="SituationRoom" asp-action="LineMachineValueData">戰情室</a>
            </div>
            <div>
                <a asp-area="" asp-controller="LogIn" asp-action="Index">登出</a>
            </div>
        </div>

    </header>
    <div class="container">
        @RenderBody()
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
