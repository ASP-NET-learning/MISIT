<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CookiesSalesSystem</title>
    <link href="~/css/authority.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-light ">
            <div class="container-fluid">
                <a class="navbar-brand" id="navbar-style">權限管理</a>
                <form class="d-flex">
                    <button class="btn" id="navbar-style" type="submit">
                        <i class="fa-solid fa-right-from-bracket"></i>
                    </button>
                </form>
            </div>

            <div class="breadcrumb-style">
                <nav aria-label="breadcrumb" class="custom-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-area="" asp-controller="System" asp-action="Index">首頁</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-area="" asp-controller="Authority" asp-action="Index">權限管理</a>
                        </li>
                    </ol>
                </nav>
            </div>

        </nav>
        

    </header>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <script src="~/js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/33d6c0fa08.js" crossorigin="anonymous"></script>
</body>
</html>